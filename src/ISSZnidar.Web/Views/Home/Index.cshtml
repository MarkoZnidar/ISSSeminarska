@model UrnikViewModel

@{
    ViewData["Title"] = "Urnik";
}

<form asp-action="Index">
    <div class="form-horizontal">
        <h4>Urnik</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="PredmetId" />*@
        <div class="form-group">
            <label asp-for="PredmetId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="PredmetId" class="form-control" asp-items="ViewBag.PredmetId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Prikaži" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Začetek
            </th>
            <th>
                Konec
            </th>
            <th>
                Opis
            </th>
            <th>
                Predmet
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Termini)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Zacetek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Konec)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Predmet.Naziv)
                </td>
                
            </tr>
        }
    </tbody>
</table>









